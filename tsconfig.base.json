{
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.test.tsx", "./src/**/*.test.ts", "./src/utilities/test/**/*.ts"],
  "compilerOptions": {
    "target": "es6",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"]
  }
}
